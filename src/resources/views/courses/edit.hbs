<div class="mt-4">
    <h2 class="text-2xl font-semibold">Cập nhật khóa học</h2>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên Khóa học</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" placeholder="Tên khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea type="text" name="description" class="form-control"
                placeholder="Mô tả">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">VideoID</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" placeholder="video id">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" placeholder="level">
        </div>

        <button type="submit" class="btn btn-primary">Sửa khóa học</button>
    </form>
</div>

